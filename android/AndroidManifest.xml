<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.holidaystudios.kngtz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.holidaystudios.kngtz.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.holidaystudios.kngtz.StartupActivity"
            android:label="@string/app_name"
            >
        </activity>

        <service android:exported="false" android:name=".GameServerService">
            <intent-filter>
                <action android:name="com.holidaystudios.kngtz.action.LAUNCH" />
                <action android:name="com.holidaystudios.kngtz.action.CREATE_SERVER" />
                <action android:name="com.holidaystudios.kngtz.action.LOGIN_TO_SERVER" />
            </intent-filter>
        </service>

    </application>

</manifest>
